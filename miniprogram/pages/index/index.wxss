/**index.wxss**/

.text {
  border: rebeccapurple solid 1px;
  height: 30px;
  width: 100%;
  border-radius: 10px 10px;
  display: flex;
  align-items: center;
  margin: 10rpx;
}

.search {
  font-size: 30rpx;
  background-color: rebeccapurple;
  position: absolute;
  right: 0rpx;
  color: white;
  top: 10rpx;
}

.swiper {
  margin-top: 10rpx;
}

.verity-big {
  width: 100%;
  height: 150rpx;
  margin-top: 15rpx;
  border: 4rpx solid rebeccapurple;
  border-radius: 15rpx;
}

.verify {
  display: flex;
  width: 100%;
  flex-direction: row;
}

.verify image {
  width: 60rpx;
  height: 60rpx;
}

.verify-img {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods {
  display: flex;
  margin: 5px 10px 5px 15px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods image {
  border-radius: 50%;
  border: 1px solid blue;
  height: 40px;
  width: 40px;
}

.re {
  width: 100%;
  height: 200rpx;
}

.recycle {
  border: 1px solid rebeccapurple;
  width: 100%;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
}

.recycle-img {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.recycle-img image {
  margin: 5px;
  width: 70rpx;
  height: 70rpx;
}

.allImgInfo {
  /* border-bottom: 1px rebeccapurple solid; */
  display: flex;
  flex-direction: row;
  margin: 5rpx;
  border: 1px white solid;
  height: 80px;
  width: 100%;
  background-color: white;
  margin: 5px;
  border-radius: 10px;
}

.allGoodsImg {
  padding: 10prx;
  margin: 10rpx;

}

.allGoodsImg image {
  width: 180rpx;
  height: 150rpx;
  border: 1px lightgrey solid;
  border-radius: 10px ;
}
.name{
  /*超出一行文字自动隐藏  */
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}