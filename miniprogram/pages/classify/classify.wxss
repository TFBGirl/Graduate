/* miniprogram/pages/classify/classify.wxss */
.classify {
  height: 100%;
  display: flex;
  flex-direction: row;
}

.tab {
  float: left;
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
}

.topTabSwiper {
  width: 30%;
  display: flex;
  flex-direction: column;
  border-right: 1px solid lightgrey;
}

.topTabSwiper:after {
  clear: both;
  display: block;
}

.tabBorer {
  border-left: 1px solid rebeccapurple;
  color: rebeccapurple;
  background-color: white;
}

.swiper {
  width: 70%;
}

swiper-item {
  width: 100%;
  height: 100%;
}

.swiper_con {
  background-color: white;
  text-align: center;
  width: 100%;
  height: 300rpx;
  margin: 0px 0px 5px 0px;
  box-shadow: 0px 2px 10px 2px #DDDDDD;
  display: flex;
  align-items: center;
}

.img image {
  width: 150rpx;
  height: 150rpx;
}

.goodsName {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.goodsinfo {
  display: flex;
  flex-direction: column;
}

.price {
  color: #f00;
  font-size: 40rpx;
}